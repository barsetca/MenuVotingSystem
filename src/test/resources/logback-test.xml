<configuration>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>C:/newprojects/MenuVotingSystem/log/menuvotingsystem.log</file>

        <encoder>
            <charset>UTF-8</charset>
            <pattern>%date %-5level %logger{50}.%M:%L - %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <withJansi>true</withJansi>
        <encoder>
            <charset>UTF-8</charset>

            <pattern>%-15d{HH:mm:ss.SSS} %highlight(%-8level) %-50(class{0}.%M):%4L - %magenta(%msg%n)</pattern>

        </encoder>
    </appender>

    <logger name="org.hsqldb" level="debug"/>
    <logger name="org.springframework.jdbc" level="debug"/>
    <logger name="ru.cherniak.menuvotingsystem" level="debug"/>

    <root level="INFO">
        <appender-ref ref="file"/>
        <appender-ref ref="console"/>
    </root>

</configuration>